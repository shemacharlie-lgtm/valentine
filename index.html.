    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const guiltMsg = document.getElementById('guilt-msg');
        
        let yesScale = 1;
        let index = 0;
        const messages = ["are you sure?üòè", "you hate me and want me to die?üò©", "Say yes please?üôÇ", "Clicked No? Wow!!!! üò©", "baby pleaseee? ü§ó"];

        noBtn.addEventListener('click', () => {
            yesScale += 0.5;
            yesBtn.style.transform = `scale(${yesScale})`;
            if (index < messages.length) {
                guiltMsg.innerText = messages[index];
                index++;
            }
        });

        yesBtn.addEventListener('click', () => {
            document.getElementById('question-page').style.display = 'none';
            document.getElementById('success-page').style.display = 'flex';
        });

        document.getElementById('envelope').addEventListener('click', function() {
            this.style.display = 'none';
            document.getElementById('letter').style.display = 'block';
        });

        function reveal(card) {
            const img = card.querySelector('.actual-img');
            const placeholder = card.querySelector('.placeholder');
            placeholder.style.display = 'none';
            img.style.display = 'block';
        }
    </script>
